{
  "manifest_version": 2,
  "name": "Sudoku overlay",
  "version": "1.0.0",
  "description": "Adds a playable sudoku grid to any webpage.",
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Sudoku overlay",
    "default_popup": "popup/sudoku.html"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
