{
  "manifest_version": 2,
  "name": "Sudoku extension",
  "version": "1.0.0",
  "description": "Add a playable sudoku grid popup to the toolbar",
  "browser_specific_settings": {
	  "gecko": {
		"data_collection_permissions": {
		  "required": ["none"]
		}
	  }
	},
  "icons": {
    "32": "icons/icon-32.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "browser_action": {
    "default_icon": {
      "32": "icons/icon-32.png"
    },
    "default_title": "Sudoku extension",
    "default_popup": "popup/sudoku.html"
  }
}
